<config>
	<modules>
		<Pli_Layer>
			<version>0.1.2</version>
		</Pli_Layer>
	</modules>
	<global>
		<models>
			<pli_layer>
				<class>Pli_Layer_Model</class>
			</pli_layer>
		</models>
		<blocks>
			<pli_layer>
				<class>Pli_Layer_Block</class>
			</pli_layer>
		</blocks>
		<helpers>
			<pli_layer>
				<class>Pli_Layer_Helper</class>
			</pli_layer>
		</helpers>
	</global>
	<frontend>
		<layout>
			<updates>
				<cms>
					<file>pli/layer.xml</file>
				</cms>
		</updates>
	</layout>
</frontend>
</config>